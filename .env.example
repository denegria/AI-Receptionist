# Server
PORT=3000
NODE_ENV=development

# Twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Deepgram (platform-managed only)
DEEPGRAM_API_KEY=your_deepgram_api_key
DEEPGRAM_STT_MODEL=flux-general-en
DEEPGRAM_TTS_MODEL=aura-2-asteria-en
DEEPGRAM_LANGUAGE=en-US

# AI Provider (platform-managed key only)
AI_PROVIDER=claude
ANTHROPIC_API_KEY=your_platform_anthropic_api_key
OPENAI_API_KEY=

# Public base URL (required for webhook provisioning)
PUBLIC_URL=https://api.your-domain.com

# Google Calendar
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://api.your-domain.com/auth/google/callback

# Microsoft Graph (Outlook)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=https://api.your-domain.com/auth/microsoft/callback

# Database
DB_PATH=./receptionist.db

# Client Configs
CLIENT_CONFIGS_PATH=./config/clients

# Admin
ADMIN_API_KEY=your_secure_admin_key_change_this

# Transport cutover
MEDIA_TRANSPORT_MODE=dual
SOCKET_IO_PATH=/socket.io-media-stream

# Redis phase-1 coordination
REDIS_URL=
REDIS_ACTIVE_SESSION_TTL_SECONDS=120
REDIS_WEBHOOK_IDEMPOTENCY_TTL_SECONDS=300

# Admission control
MAX_GLOBAL_ACTIVE_CALLS=100
MAX_TENANT_ACTIVE_CALLS=20
ADMISSION_QUEUE_ENABLED=true
ADMISSION_QUEUE_MAX_SIZE=50
